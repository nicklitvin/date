generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
}

enum Gender {
    Male
    Female
}

enum Opinion {
    Like
    Dislike
}

enum AttributeType {
    Fitness
    Music
}

model User {
    id              String          @id
    email           String
    name            String
    age             Int
    ageInterest     Int[]
    gender          Gender
    genderInterest  Gender[]
    attributes      String[]
    images          String[]
    description     String
    notifications   Boolean
    university      String
    subscribeEnd    DateTime
    isSubscribed    Boolean
    subscriptionID  String?
    elo             Float
}

model Swipe {
    id              String          @id
    timestamp       DateTime    
    userID          String
    swipedUserID    String
    action          Opinion
}

model Message {
    id              String          @id
    timestamp       DateTime
    userID          String
    recepientID     String
    message         String
    readStatus      Boolean
}

model Attribute {
    id             String           @id 
    type           AttributeType   
    value          String
}

model UserReport {
    id              String          @id
    userID          String
    timestamp       DateTime
    reportedEmail   String              
}

model ErrorLog {
    id              String          @id
    timestamp       DateTime
    device          String
    message         String
}

model Announcement {
    id              String          @id
    startTime       DateTime
    endTime         DateTime
    title           String
    message         String
}

model FreeTrialUsedUser {
    email           String          @id
    timestamp       DateTime
}

model Verification {
    schoolEmail     String          @id
    personalEmail   String          
    code            Int
    expires         DateTime
    verified        Boolean         
}