generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
}

enum Gender {
    Male
    Female
}

enum SchoolYear {
    Freshman
    Sophomore
    Junior
    Senior
    Graduate
    Alumni
}

enum Opinion {
    Like
    Dislike
}

enum AttributeType {
    Fitness
    Music
}

model User {
    id              String     @id
    email           String
    name            String
    age             Int
    gender          Gender
    interest        Gender
    attributes      String[]
    images          String[]
    description     String
    notifications   Boolean
    university      String
}

model Swipe {
    id              String      @id
    timestamp       DateTime    
    userID          String
    swipedUserID    String
    action          Opinion
}

model Message {
    id              String      @id
    timestamp       DateTime
    userID          String
    recepientID     String
    message         String
    readStatus      Boolean
}

model Attribute {
    type            AttributeType   @id
    values          String[]
}

model Report {
    id              String          @id
    userID          String
    timestamp       DateTime
    reportedEmail   String              
}

model ErrorLog {
    id              String          @id
    timestamp       DateTime
    device          String
    message         String
}

model Announcement {
    id              String          @id
    startTime       DateTime
    endTime         DateTime
    title           String
    message         String
}